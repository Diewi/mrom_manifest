<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="xperiamrom" fetch="https://github.com/XperiaMultiRom" />
  <remote name="multirom-dev" fetch="https://github.com/multirom-dev" />
  <remote name="tasssadar" fetch="https://github.com/Tasssadar" />
  <remote name="diewi" fetch="https://github.com/Diewi" />

  <!-- Multirom repos (XperiaMultiRom or multirom-dev) -->
  <remove-project name="android_bootable_recovery" />
  <project name="Team-Win-Recovery-Project" path="bootable/recovery" remote="diewi" revision="android-7.1-mrom" />
  <project name="multirom" path="system/extras/multirom" remote="multirom-dev" revision="master" />
  <project name="multirom_adbd" path="system/extras/multirom/adbd" remote="multirom-dev" revision="master" />
  <project name="kexec-tools" path="system/extras/multirom/kexec-tools" remote="tasssadar" revision="master" />
  <project name="libbootimg" path="system/extras/libbootimg" remote="multirom-dev" revision="master" />

  <!-- XperiaMultiRom device tree repos -->
  <project name="android_device_sony_castor" path="device/sony/castor" remote="xperiamrom" revision="android-7.1" />
  <project name="android_device_sony_castor_windy" path="device/sony/castor_windy" remote="xperiamrom" revision="android-7.1" />
  <project name="android_device_sony_leo" path="device/sony/sirius" remote="xperiamrom" revision="android-7.1" />
  <project name="android_device_sony_shinano-common" path="device/sony/shinano-common" remote="xperiamrom" revision="android-7.1" />
  <project name="android_device_sony_sirius" path="device/sony/sirius" remote="xperiamrom" revision="android-7.1" />

  <!-- Common device repos -->
  <project name="android_device_sony_sepolicy" path="device/sony/sepolicy" remote="omnirom" revision="android-7.1" />
  <project name="android_device_sony_common" path="device/sony/common" remote="omnirom" revision="android-7.1" />

  <!-- Common kernel-related repos -->
  <project name="android_kernel_sony_msm" path="kernel/sony/msm" remote="omnirom" revision="android-7.1" />
  <project name="android_device_sony_common-init" path="device/sony/common-init" remote="omnirom" revision="android-7.1" />
  <project name="android_device_sony_common-headers" path="device/sony/common-headers" remote="omnirom" revision="android-7.1" />

  <!-- Tools required by all sodp-derived sony devices -->
  <project name="android_hardware_sony_thermanager" path="hardware/sony/thermanager" remote="omnirom" revision="android-7.1" />
  <project name="android_hardware_sony_timekeep" path="hardware/sony/timekeep" remote="omnirom" revision="android-7.1" />
  <project name="android_hardware_sony_macaddrsetup" path="hardware/sony/macaddrsetup" remote="omnirom" revision="android-7.1" />
</manifest>
